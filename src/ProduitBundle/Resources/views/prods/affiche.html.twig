    <div class="w3lsbanner-info">
    <!-- header -->
    <div class="header">
    <div class="container">
    <div class="agile_header_grid">

        <div class="clearfix"> </div>
    </div>
    <div class="header-nav"><!-- header-three -->
    <nav class="navbar navbar-default">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>
    <h1>la Liste des Produit</h1>

    <table>
        <thead>
        <tr>

            <td bgcolor="#e9967a" style="color: white ;font-size: larger" align="center" >: Image : </td>

            <td bgcolor="#e9967a" style="color: white ;font-size: larger" align="center" >: Nom Produit :</td>
            <td bgcolor="#e9967a" style="color: white;font-size:larger" align="center">: Prix Produit :</td>
            <td bgcolor="#e9967a" style="color: white;font-size:larger" align="center"> : Categorie Produit : </td>
            <td bgcolor="#e9967a" style="color: white;font-size: larger" align="center"> : Prix Produit :</td>
            <td bgcolor="#e9967a" style="color: white;font-size: larger" align="center">: Nom patisserie :</td>
            <td bgcolor="#e9967a" style="color: white;font-size: larger" align="center">: Stock :</td>
            <td bgcolor="#e9967a" style="color: white;font-size: larger" align="center"> : Modification :</td>
            <td></td>



        </tr>
        </thead>
        <tbody>
        {% for prods in prods %}
            <tr>

                <td bgcolor="white" ><img src="{{ asset("ressources/" ~ prods.getImage()) }}" alt=" " class="img-responsive" style="height: 50px;width: 50px" /></td>
                <td  bgcolor="ffe4c4" style="font-size: large ;color:black" align="center"> {{ prods.nompro}}</td>
                <td bgcolor="ffe4c4" style="font-size: large ;color:black" align="center"> {{ prods.prixpro}}</td>
                <td bgcolor="ffe4c4" style="font-size: large ;color:black" align="center"> {{ prods.categoriepro}}</td>
                <td bgcolor="ffe4c4" style="font-size: large ;color:black" align="center"> {{ prods.detailspro}}</td>
                <td bgcolor="ffe4c4" style="font-size: large ;color:black" align="center"> {{ prods.nompat}}</td>
                <td bgcolor="ffe4c4" style="font-size: large ;color:black" align="center"> {{ prods.stock}}</td>
                <td>
                    <ul>

                        <li>
                            <a href="{{ path('prods_edit', { 'idpro': prods.idpro }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
          <a href="{{ path('patisserie_homepage' )}}">RETOUR VERS MA PATISSERIE</a>
        </li>
