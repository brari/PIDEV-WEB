{% extends 'base.html.twig' %}

{% block body %}
    <h1><center>Liste de vos reservations</center></h1>

    <table border="2">
        <thead>
            <tr>
                <th>Nom Patisserie</th>
                <th>Places</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Modifications</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td><a href="{{ path('reservation_show', { 'id': reservation.id }) }}">{{ reservation.idpat.nom }}</a></td>
                <td>{{ reservation.places }}</td>
                <td>{% if reservation.date %}{{ reservation.date|date('Y-m-d') }}{% endif %}</td>
                <td>{% if reservation.heure %}{{ reservation.heure|date('H:i:s') }}{% endif %}</td>
                <td>
                    <a href="{{ path('reservation_edit', { 'id': reservation.id }) }}">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
